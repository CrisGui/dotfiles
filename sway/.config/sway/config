set $alt Mod1
set $Print 107

set $left  h
set $down  j
set $up    k
set $right l

set $term              kitty
set $browser           librewolf
set $multi             tmux
set $file_explorer     pcmanfm
set $folder_background ~/Pictures/catppuccin-wallpapers/os/arch-black-4k.png
